@model WebLomelinCore.Models.FacturasPagadas

<header>
    <script src="~/js/core.js"></script>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/5b1471f5e3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <style>

        input::-webkit-inner-spin-button,
        input::-webkit-outer-spin-button {
            -webkit-appearance: none;
        }

        input[type="number"] {
            -moz-appearance: textfield;
        }

        input[type="button"] {
            cursor: pointer;
        }

        input::-webkit-clear-button {
            display: none;
            -webkit-appearance: none;
        }


        .custom-file-input ~ .custom-file-label::after {
            content: "...";
        }

        .tableFixHead {
            overflow-y: auto;
            height: 480px;
        }

            .tableFixHead table {
                border-collapse: collapse;
                width: 100%;
            }

            .tableFixHead th,
            .tableFixHead td {
                padding: 8px 16px;
            }

            .tableFixHead td {
                text-align: center;
            }

            .tableFixHead th {
                position: sticky;
                top: 0;
                /* background-color: white;
                border: 0px solid white; */
                text-align: center;
                background: rgb(37, 64, 143);
                color: white;
            }

        .form-group-custom {
            margin-bottom: 6px;
        }

        .font-size-row {
            font-size: 12px !important;
        }

        .font-size-head {
            font-size: 12px !important;
        }

        .RowNegativo {
            background-color: red;
            border-color: red;
        }

        .RowPositivo {
            background-color: green;
            border-color: green;
        }

        .ColorTextRed {
            color: red;
        }

        .pointer {
            cursor: pointer;
        }


        table tr th {
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .sorting {
        }

        .asc:after {
            content: ' ↑';
        }

        .desc:after {
            content: " ↓";
        }

    </style>
</header>

<h3>Facturas Cargadas</h3>

<form asp-action="Busqueda" asp-controller="Facturas" id="frmBusqueda" name="frmBusqueda">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title m-1">Filtro de busqueda</h6>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="form-group col-sm-4">
                        <label asp-for="IdRegion" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectRegion">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectRegion" asp-for="IdRegion" class="form-control" onchange="return changeRegion();" asp-items=@ViewBag.Regiones></select>
                        </div>
                        <span asp-validation-for="IdRegion" class="text-danger"></span>
                    </div>


                    <div class="form-group col-sm-4">
                        <label asp-for="IdInmueble" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectInmueble">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectInmueble" asp-for="IdInmueble" class="form-control" asp-items=@ViewBag.Inmuebles></select>
                        </div>
                        <span asp-validation-for="IdInmueble" class="text-danger"></span>
                    </div>


                   @*  <div class="form-group col-sm-4">
                        <label asp-for="IdStatusProceso" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectIdEstatus">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectIdEstatus" asp-for="IdStatusProceso" class="form-control" asp-items=@ViewBag.Estatus></select>
                        </div>
                        <span asp-validation-for="IdStatusProceso" class="text-danger"></span>
                    </div> *@

                </div>
                <div class="container">
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <button type="submit" value="Buscar" class="btn btn-success btn-sm">
                                <i class="bi bi-floppy2"></i>
                                Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
<hr />
<div id="tableData" name="tableData" class="table-responsive">
    @{
        try
        {
            await Html.RenderPartialAsync("_Listado");
        }
        catch (Exception)
        {
        }
    }
</div>

<script src="~/js/FacturasPagadas.js" />
