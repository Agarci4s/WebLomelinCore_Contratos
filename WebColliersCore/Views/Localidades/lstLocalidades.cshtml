@model IEnumerable<WebColliersCore.Models.Localidad>

<header>
    <style type="text/css">
        table tr th {
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .sorting {
        }

        .asc:after {
            content: ' ↑';
        }

        .desc:after {
            content: " ↓";
        }
    </style>
</header>

<table class="table table-striped table-responsive-sm table-sm small">
    <thead style="position: sticky; top:0; background-color: rgba(11,59,126,1); color: white;">
        <tr>
            <th>
                Inmueble
            </th>
