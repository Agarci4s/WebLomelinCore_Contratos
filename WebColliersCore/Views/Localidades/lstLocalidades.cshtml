            {
                <th id="thTipoGentera">
                    Tipo
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.NumeroLocalidad)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.IdUsoInmueble)
            </th>*@
            <th>
                Arrendatario
            </th>
            <th>
                Nombre Comercial
            </th>
            <th>
                Estatus
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaveInmuebleAux)
                </td>
                @if (ViewBag.VB_idCartera == 4)
                {
                    <td id="tdTipoGentera">
                        @Html.DisplayFor(modelItem => item.TipoInmuebleGenteraAux)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroLocalidad)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.TipoLocalidadAux)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ArrendatarioAux)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreComercialAux)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoAux)
                </td>
                <td>
