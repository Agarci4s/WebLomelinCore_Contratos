                        </div>
                        <span asp-validation-for="PorcRtaCepro" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="PierdeDif" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectPierdeDif">
                                    <i class="fa-sharp fa-solid fa-file-lines"></i>
                                </label>
                            </div>
                            <select id="selectPierdeDif" asp-for="PierdeDif" asp-items=ViewBag.lstPierdeDif class="form-control"></select>
