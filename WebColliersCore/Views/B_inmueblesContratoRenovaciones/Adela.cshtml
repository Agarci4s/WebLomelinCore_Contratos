                    </div>

                    <div class="form-group col-sm-3">
                        <label asp-for=ImporteAnticipado class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputImporteAnticipado">
                                    <i class="bi bi-info-circle-fill"></i>
                                </label>
                            </div>
                            <input disabled id="inputImporteAnticipado" asp-for="ImporteAnticipado" class="form-control" placeholder="0.00" />
