                                <label class="input-group-text" for="inputImporteTotal">
                                    <i class="bi bi-info-circle-fill"></i>
                                </label>
                            </div>
                            <input disabled id="inputImporteTotal" asp-for="ImporteTotal" class="form-control" placeholder="0.00" />
