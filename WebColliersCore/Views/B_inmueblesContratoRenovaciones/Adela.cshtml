                            <input id="inputNumProrrateo" asp-for="NumProrrateo" class="form-control" placeholder="0" />
                        </div>
                        <span asp-validation-for="NumProrrateo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for=RentaActual class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputRentaActualAdela">
                                    <i class="bi bi-info-circle-fill"></i>
                                </label>
