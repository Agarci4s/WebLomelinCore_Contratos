@model WebLomelinCore.Models.NegociacionesAdela

<header>
    <script src="~/js/core.js"></script>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/5b1471f5e3.js" crossorigin="anonymous"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <link href="~/css/sweetalert.css" rel="stylesheet">
    <style type="text/css">
        table tr th {
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .sorting {
        }

        .asc:after {
            content: ' ↑';
        }

        .desc:after {
            content: " ↓";
        }

        .tableFixHead {
            overflow-y: auto;
            height: 150px;
        }

            .tableFixHead table {
                border-collapse: collapse;
                width: 100%;
            }

            .tableFixHead th,
            .tableFixHead td {
                padding: 8px 16px;
            }

            .tableFixHead td {
                text-align: left;
            }

            .tableFixHead th {
                position: sticky;
                top: 0;
                border: 0px solid white;
                text-align: center;
                background: rgba(11,59,126,1);
                color: white;
            }

        .form-group-custom {
            margin-bottom: 6px;
            margin-right: 6px;
        }

        #tabTiposUso tr.noSearch {
            background: White;
            font-size: 0.8em;
        }

            #tabTiposUso tr.noSearch td {
                padding-top: 10px;
                text-align: center;
            }

        .hide {
            display: none;
        }

        .red {
            color: Red;
        }

        #tabTiposUso tr:hover {
            background-color: aliceblue;
        }

        .custom-file-input ~ .custom-file-label::after {
            content: "...";
        }

        .divContainer {
            overflow-y: auto;
            height: 450px;
        }
    </style>
</header>

<h4>Adela</h4>
<hr />
<div class="row">
    <div class="form-group col-sm-6">
        <label asp-for="IdInmueble" class="control-label"></label>
        <input placeholder="Inmueble" id="inputDataListInm" type="text" list="datalistIdInmueble" class="form-control" />
        <datalist id="datalistIdInmueble"></datalist>
        <select id="inputIdInmueble" class="form-control" asp-items="ViewBag.Inmuebles" style="visibility:hidden; height:0px"></select>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="IdContrato" class="control-label"></label>
        <select id="selectContrato" asp-for="IdContrato" asp-items=ViewBag.Contratos class="form-control"></select>
    </div>
    <div class="form-group col-sm-2 align-self-end">
        <button class="btn btn-primary mt-4" onclick="return Search();">Buscar...<i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
</div>
<hr />
<div class="form-group col-md-12" style="background-color:lightblue">
    @* <partial name="PlantillaInmueble" model="Model.b_inmuebles" /> *@
    <h6>Información del Inmueble</h6>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-1">
            <label asp-for="cr" class="control-label"></label>
            <input readonly asp-for="cr" class="form-control" />
        </div>
        <div class="form-group col-md-1">
            <label asp-for="ue" class="control-label"></label>
            <input readonly asp-for="ue" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="nombre" class="control-label"></label>
            <input readonly asp-for="nombre" class="form-control" />
        </div>
    </div>
    <h6>Ubicación del inmueble</h6>
    <hr />
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="direccion" class="control-label"></label>
            <input readonly asp-for="direccion" class="form-control" />
        </div>
        <div class="form-group col-md-2">
            <label asp-for="noext" class="control-label"></label>
            <input readonly asp-for="noext" class="form-control" />
        </div>
        <div class="form-group col-md-1">
            <label asp-for="lote" class="control-label"></label>
            <input readonly asp-for="lote" class="form-control" />
        </div>
        <div class="form-group col-md-1">
            <label asp-for="manzana" class="control-label"></label>
            <input readonly asp-for="manzana" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="colonia" class="control-label"></label>
            <input readonly asp-for="colonia" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="municipio" class="control-label"></label>
            <input readonly asp-for="municipio" class="form-control" />
        </div>

        <div class="form-group col-md-1">
            <label asp-for="cp" class="control-label"></label>
            <input readonly asp-for="cp" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="estado" class="control-label"></label>
            <input readonly asp-for="estado" class="form-control" />
        </div>
    </div>
</div>
<hr/>
<div class="row divContainer">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="#collapseAdela">
                    A D E L A
                </a>
            </div>

            <div id="collapseAdela" class="collapse show" data-parent="#accordionAdela">
                <div class="row container-fluid card-body">

                    <div class="form-group col-sm-4">
                        <label asp-for=fecha_revision class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputFecha_revision">
                                    <i class="fa-solid fa-calendar-days"></i>
                                </label>
                            </div>
                            <input disabled id="inputFecha_revision" asp-for="fecha_revision" class="form-control" placeholder="Fecha de Revisión" />
                        </div>
                        <span asp-validation-for="fecha_revision" class="text-danger"></span>
                    </div>                    

                    <div class="form-group col-sm-4">
                        <label asp-for=fecha_termino class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputfecha_termino">
                                    <i class="fa-solid fa-calendar-days"></i>
                                </label>
                            </div>
                            <input disabled id="inputfecha_termino" asp-for="fecha_termino" class="form-control" placeholder="Fecha de Vencimiento" />
