@model WebColliersCore.Models.DtActividadPuesto

@{
    ViewData["Title"] = "Editar puesto";
}

<h3>Editar puesto</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="actividad" class="control-label"></label>
                <input asp-for="actividad" class="form-control" />
                <span asp-validation-for="actividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
