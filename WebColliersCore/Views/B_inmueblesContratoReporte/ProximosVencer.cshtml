<script>
    // Create a new report instance
    var report = new Stimulsoft.Report.StiReport();
    // Load report from url
    report.loadFile("../reports/ContratoVencerListado.mrt");
    // Render report
    report.renderAsync(function () {
        document.getElementById("savePdf").disabled = false;
    });

    // Export report to PDF format and save to file
    function saveReportPdf() {
        // Export to PDF
        report.exportDocumentAsync(function (pdfData) {
            // Get report file name
            var fileName = report.reportAlias;
            // Save data to file
            Stimulsoft.System.StiObject.saveAs(pdfData, fileName + ".pdf", "application/pdf");
        }, Stimulsoft.Report.StiExportFormat.Pdf);
    }


    function Search(){
        mostrarRegistros();
    };

    function mostrarRegistrosReporte(){
        var fecha = $("#fecha").val();
        var fecha2 = $("#fecha2").val();

        $.ajax({
            type: "POST",
            url: "getListadoContratosParametrizadoReporte",
            data:{
                // FechaInicio: fecha,
                // FechaFin: fecha2,
                Campo: $("#selectCampo").val(),
                Meses: $("#inputMeses").val()
            },
            success: function(response){
                $("#divListaReporte").html(response);
                $('#myModal').modal('show');
            },
            error: function(response){
                alert("Error");
            }
        });
    };
        $("#chkTodos").click(function () {
        var status = $("#chkTodos").prop('checked');
        toggleChecked(status);
    });

    function mostrarRegistros(){
        var fecha = $("#fecha").val();
        var fecha2 = $("#fecha2").val();

        $.ajax({
            type: "POST",
            url: "getListadoContratosParametrizado",
            data:{
                // FechaInicio: fecha,
                // FechaFin: fecha2,
                Campo: $("#selectCampo").val(),
                Meses: $("#inputMeses").val()
            },
            success: function(response){
                $("#divLista").html(response);
            },
            error: function(response){
                alert("Error");
            }
        });
    };
        $("#chkTodos").click(function () {
        var status = $("#chkTodos").prop('checked');
        toggleChecked(status);
    });

    function toggleChecked(status) {
            $(".chkres input").each(function () {
                $(this).prop("checked", status);
            });
    }
</script>