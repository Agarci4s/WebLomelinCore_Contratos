{
    <div id="divLista">
        @{
            await Html.RenderPartialAsync("_ListContratosPV");
        }
    </div>
}



@section Scripts {
    <script src="~/js/sweetalert.min.js"></script>
    <link href="~/css/sweetalert.css" rel="stylesheet">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function Search(){
        mostrarRegistros();
    };

    function mostrarRegistros(){
        var fecha = $("#fecha").val();
        var fecha2 = $("#fecha2").val();

        $.ajax({
            type: "POST",
            url: "getListadoContratosParametrizado",
            data:{                
                // FechaInicio: fecha,
                // FechaFin: fecha2,
                Campo: $("#selectCampo").val(),
                Meses: $("#inputMeses").val()
            },
            success: function(response){
                $("#divLista").html(response);
            },
            error: function(response){
                alert("Error");
            }
        });
    };
        $("#chkTodos").click(function () {
        var status = $("#chkTodos").prop('checked');
        toggleChecked(status);
    });
    function toggleChecked(status) {
            $(".chkres input").each(function () {
                $(this).prop("checked", status);
            });
    }
</script>