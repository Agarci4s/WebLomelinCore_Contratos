<div class="tableFixHead">
    @using (Html.BeginForm("AccionesAgua", "ListadoServicios", FormMethod.Post))
    {
    <table class="table table-responsive-sm table-sm small" id="tab">
        <thead class="font-size-head">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CuentaAgua)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Lectura1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Lectura2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ImporteTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().UsuarioAutorizaDescripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().StatusProcesoDescripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().EsSeleccionado)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (pagosagua item in Model)
                {
                    <tr>
                        <td>
                            @Html.Raw(item.CuentaAgua)
                        </td>
                        <td>
                            @Html.Raw(item.Lectura1)
                        </td>
                        <td>
                            @Html.Raw(item.Lectura2)
                        </td>
                        <td>
                            @Html.Raw(item.ImporteTotal)
                        </td>
                        <td>
                            @Html.Raw(item.UsuarioAutoriza)
                        </td>
                        <td>
                            @Html.Raw(item.StatusProcesoDescripcion)
                        </td>
                        <td>
                            @Html.CheckBoxFor(model=>item.EsSeleccionado)
                            @Html.HiddenFor(model=>item.idPagoAgua)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" style="color: red;">Sin información para mostrar</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container">
        <div class="row">
            <div class="form-group col-sm-4">
                <button type="submit" value="Autorizar" class="btn btn-success btn-sm">
                    <i class="bi bi-floppy2"></i>
                        Autorizar
                </button>
            </div>
            <div class="form-group col-sm-4">
            <button type="submit" value="Rechazar" class="btn btn-success btn-sm">
                <i class="bi bi-floppy2"></i>
                Rechazar
            </button>
            </div>
        </div>
    </div>
    }
</div>


