<h3>Listado de Servicios</h3>

<form asp-action="Busqueda" asp-controller="ListadoServicios" id="frmBusqueda" name="frmBusqueda">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title m-1">Filtro de busqueda</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    
                    <div class="form-group col-sm-4">
                        <label asp-for="IdTipoServicio" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectIdTipoSerivicio">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectIdTipoSerivicio" asp-for="IdTipoServicio" class="form-control" asp-items=@ViewBag.TipoServicios></select>
                        </div>
                        <span asp-validation-for="IdTipoServicio" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <div class="form-group col-sm-4">
                            <label asp-for="IdRegion" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-append">
                                    <label class="input-group-text" for="selectRegion">
                                        <i class="bi bi-building"></i>
                                    </label>
                                </div>
                                <select id="selectRegion" asp-for="IdRegion" class="form-control" onchange="return changeRegion();" asp-items=@ViewBag.Regiones></select>
                            </div>
                            <span asp-validation-for="IdRegion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="IdInmueble" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectInmueble">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectInmueble" asp-for="IdInmueble" class="form-control" onchange="return changeInmueble();" asp-items=@ViewBag.Inmuebles></select>
                        </div>
                        <span asp-validation-for="IdInmueble" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">

                    <div class="form-group col-sm-4">
                        <label asp-for="IdLocalidad" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectLocalidad">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectLocalidad" onchange="return changeLocalidad();" asp-for="IdLocalidad" class="form-control" asp-items=@ViewBag.Localidades></select>
                        </div>
                        <span asp-validation-for="IdLocalidad" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="idCuenta" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectCuenta">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectCuenta" asp-for="idCuenta" class="form-control" asp-items=@ViewBag.Cuentas></select>
                        </div>
                        <span asp-validation-for="idCuenta" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="IdStatusProceso" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <label class="input-group-text" for="selectIdEstatus">
                                    <i class="bi bi-building"></i>
                                </label>
                            </div>
                            <select id="selectIdEstatus" asp-for="IdStatusProceso" class="form-control" asp-items=@ViewBag.Estatus></select>
                        </div>
                        <span asp-validation-for="IdStatusProceso" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="form-group col-sm-4">
                        <button type="submit" value="Buscar" class="btn btn-success btn-sm">
                            <i class="bi bi-floppy2"></i>
                            Buscar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
